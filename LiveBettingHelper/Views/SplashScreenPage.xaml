<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:utils="clr-namespace:LiveBettingHelper.Utilities"
             x:Class="LiveBettingHelper.Views.SplashScreenPage"
             x:DataType="utils:Logger"
             BackgroundColor="{StaticResource Primary}">
    <Grid>
        <VerticalStackLayout VerticalOptions="Center" Spacing="10">
            <ActivityIndicator IsRunning="True" Color="White" HeightRequest="100" WidthRequest="100"/>
            <Label Text="{Binding Caption}" TextColor="White" HorizontalOptions="Center" FontAttributes="Bold" FontSize="20"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>