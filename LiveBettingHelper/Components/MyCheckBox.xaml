<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LiveBettingHelper.Components.MyCheckBox"
             x:Name="this">
    <Grid BindingContext="{x:Reference this}">
        <CheckBox x:Name="SelectionCheckBox" Scale="1.5" Color="{Binding BoxColor}" IsChecked="{Binding IsChecked, Mode=OneWay}" CheckedChanged="SelectionCheckBox_CheckedChanged"/>
        <BoxView x:Name="PartlySelectedSign" Grid.Column="1" Scale="0.28" Color="{Binding BoxColor,Mode=OneWay}" IsVisible="{Binding IsPartiallyChecked,Mode=OneWay}"/>
    </Grid>
</ContentView>
