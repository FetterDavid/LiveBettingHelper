<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LiveBettingHelper.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LiveBettingHelper.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Next Matches" Icon="next_matches.png">
            <ShellContent ContentTemplate="{DataTemplate local:NextMachesPage}"/>
        </Tab>
        <Tab Title="Live Matches" Icon="live_matches.png">
            <ShellContent ContentTemplate="{DataTemplate local:LiveMatchesPage}"/>
        </Tab>
        <Tab Title="History" Icon="match_history.png">
            <ShellContent ContentTemplate="{DataTemplate local:BetHistoryPage}"/>
        </Tab>
    </TabBar>

</Shell>
